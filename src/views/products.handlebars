          <button class="boton-producto" type="submit" id="btnSend" value="carts/{{this.cart}}/product/{{this._id}}">Agregar al Carrito</button>
          {{else}}
          <button class="boton-producto" type="submit" onclick="agregarAlerta('No puedes porque eres admin')">Agregar al Carrito</button>
          {{/if}}

   </div>

    </div>

  {{/each}}

</div>

{{#if hasNextPage}}

    <a href="/products?page={{nextPage}}" class="navigate-button" style="color:#00000">Siguiente</a>

{{/if}}

{{#if hasPrevPage}}

    <a href="/products?page={{prevPage}}" class="navigate-button"style="color:#00000" >Anterior</a>

{{/if}}

